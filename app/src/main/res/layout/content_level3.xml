<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.wordly.level3"
    tools:showIn="@layout/app_bar_level3">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/book">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_gravity="center"
                android:onClick="beginner"
                android:text="Beginner"
                android:fontFamily="serif-monospace"
                android:textColor="#000000"
                android:textSize="10pt"
                android:background="@drawable/roundedcorners"/>
            <TextView
                android:layout_margin="2pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_gravity="center"
                android:background="@drawable/unlock12"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_gravity="center"
                android:onClick="easy"
                android:text="Easy"
                android:fontFamily="serif-monospace"
                android:textColor="#000000"
                android:textSize="10pt"
                android:background="@drawable/roundedcorners"/>
            <TextView
                android:layout_margin="2pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_gravity="center"
                android:background="@drawable/unlock12"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_gravity="center"
                android:onClick="intermediate"
                android:text="Intermediate"
                android:fontFamily="serif-monospace"
                android:textColor="#000000"
                android:textSize="10pt"
                android:background="@drawable/roundedcorners"/>
            <TextView
                android:layout_margin="2pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_gravity="center"
                android:background="@drawable/unlock12"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_gravity="center"
                android:onClick="hard"
                android:text="Hard"
                android:fontFamily="serif-monospace"
                android:textColor="#000000"
                android:textSize="10pt"
                android:background="@drawable/roundedcorners"/>
            <TextView
                android:layout_margin="2pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_gravity="center"
                android:background="@drawable/lock12"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_gravity="center"
                android:onClick="expert"
                android:text="Expert"
                android:fontFamily="serif-monospace"
                android:textColor="#000000"
                android:textSize="10pt"
                android:background="@drawable/roundedcorners"/>
            <TextView
                android:layout_margin="2pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_gravity="center"
                android:background="@drawable/lock12"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>