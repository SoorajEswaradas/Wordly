<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37474F"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.wordly.level1"
    tools:showIn="@layout/app_bar_level1">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#37474F">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25pt"
            android:orientation="horizontal"
            android:background="#37474F"
            >

            <TextView

                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/roundedcorners"
                android:gravity="center"
                android:onClick="beginner"
                android:text="Unlocked"
                android:fontFamily="serif-monospace"
                android:textColor="#000000"
                android:textSize="10pt" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#37474F"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:onClick="beginner"
                android:text="Beginner"
                android:fontFamily="serif-monospace"
                android:textColor="#000000"
                android:textSize="10pt"
                android:background="@drawable/roundedtextviews"/>


        </LinearLayout>

        <LinearLayout
            android:background="#37474F"
            android:layout_width="match_parent"
            android:layout_height="25pt"
            android:orientation="horizontal"
            >

            <TextView
                android:background="@drawable/roundedcorners"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:onClick="beginner"
                android:text="Locked"
                android:fontFamily="serif-monospace"
                android:textColor="#000000"
                android:textSize="10pt" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#37474F">

            <TextView
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:textColor="#000000"
                android:text="Easy"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/roundedtextviews"
                android:layout_marginBottom="2dp"
                android:onClick="easy"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#37474F">

            <TextView
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:layout_marginBottom="2dp"
                android:textColor="#000000"
                android:text="Intermediate"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/roundedtextviews"
                android:onClick="intermediate"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#37474F">

            <TextView
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:layout_marginBottom="2dp"
                android:textColor="#000000"
                android:text="Hard"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/roundedtextviews"
                android:onClick="hard"/>


        </LinearLayout>
        <LinearLayout
            android:fontFamily="serif-monospace"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#37474F">

            <TextView
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:layout_marginBottom="2dp"
                android:textColor="#000000"
                android:text="Expert"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/roundedtextviews"
                android:onClick="hard"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
